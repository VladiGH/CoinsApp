<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/movie_image_cv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />


        <LinearLayout
            android:id="@+id/data_container_ll_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_image_cv"

            android:orientation="vertical">

            <TextView
                android:id="@+id/name_coin_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="15dp"
                android:text="@string/nombre_moneda" />

            <TextView
                android:id="@+id/country_coin_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="end"
                android:text="@string/pais_moneda" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>